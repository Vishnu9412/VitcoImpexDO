<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  {{>headTags}}
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
  <meta name="description" content="Post your complaint and let us help you get back to focusing on what really matters.">
  <!-- Style -->
  <link rel="stylesheet" href="/css/complaints/viewComplaints.css">
  <title>Complaints - Vitco Impex</title>
  <link rel="stylesheet" href="/css/loading/loading.css">

</head>
<style>
  body,
  html {
    overflow-x: hidden;
  }

  .not-loggined-img {
    height: 50vh;
    width: 100vw;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .not-loggined-img img {
    max-width: 100%;
    max-height: 100%;
  }

  .new-complaint-btn {
    position: fixed;
    bottom: 1em;
    z-index: 10;
    right: 1em;
    padding: 1em 2em;
    background-color: #26ABE2;
    border: none;
    color: white;
    border-radius: 4px;
  }

  .new-complaint-btn-link {
    padding: 0.5em 1em;
    margin-left: 1em;
    background-color: #57bde9;
    border: none;
    transition: all 0.3s ease-in-out;
    color: white;
    border-radius: 4px;
  }

  .new-complaint-btn-link:hover {
    background-color: #26ABE2;
  }

  .complaints {
    margin-top: 2em;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .complaint-status[data-status="Progress"] button {
    background-color: #FFF7E6;
    color: #FFB20B;
  }

  .complaint-status[data-status="Pending"] button {
    background-color: #FDF4F6;
    color: #DE486C;
  }

  .complaint-status[data-status="Solved"] button {
    background-color: #EBF9F4;
    color: #34B385;
  }

  table {
    border-collapse: collapse;
    margin: 0;
    padding: 0;
    width: 100em;
    table-layout: fixed;
  }

  table caption {
    font-size: 1.5em;
    margin: .5em 0 .75em;
  }

  table tr {
    background-color: #fff;
    color: rgb(92, 92, 92);
    padding: .35em;
  }

  table th {
    padding: 1em;
    border-bottom: 1px solid rgb(194, 194, 194);
    color: #26ABE2;
  }

  table th,
  table td {
    padding: .625em;
    text-align: center;
  }

  table td {
    border-bottom: 1px solid #ccc;

  }

  table th {
    font-size: .85em;
    letter-spacing: .1em;
    text-transform: uppercase;
  }

  tbody tr td:nth-child(5) button {
    cursor: default;
    padding: 0.5em;
    color: white;
    border-radius: 4px;
  }

  @media screen and (max-width: 600px) {
    table {
      border: 0;
    }

    table caption {
      font-size: 1.3em;
    }

    table thead {
      border: none;
      clip: rect(0 0 0 0);
      height: 1px;
      margin: -1px;
      overflow: hidden;
      padding: 0;
      position: absolute;
      width: 1px;
    }

    table tr {
      border-bottom: 3px solid #ccc;
      display: block;
      margin-bottom: .625em;
    }

    table td {
      border-bottom: 1px solid #ccc;
      display: block;
      font-size: .8em;
      text-align: right;
    }

    table td::before {
      content: attr(data-label);
      float: left;
      font-weight: bold;
      text-transform: uppercase;
    }

    table td:last-child {
      border-bottom: 0;
    }
  }

</style>

<body>
  {{>loading}}
  {{>header}}
  {{>pageHeader}}
  {{#*inline "page-header-heading"}}
  Your Complaints
  {{/inline}}
  {{#*inline "page-header-extra-options"}}
  <button class="new-complaint-btn-link" onclick="window.location.href = '/complaint-new/new'">Add new</button>
  {{/inline}}
  {{#*inline "page-header-data"}}
  We're happy to assist you with all of your problems.
  {{/inline}}
  <button class="new-complaint-btn" onclick="window.location.href = '/complaint-new/new'">Add new</button>
  {{!-- <div class="complaints">
    <table>
      <thead>
        <tr>
          <th scope="col">Complaint ID</th>
          <th scope="col">Machine seriel number</th>
          <th scope="col">Date Of purchase</th>
          <th scope="col">Issue</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
      <tbody id="all-complaints-body">
      </tbody>
    </table> --}}
    <div class="complaints">
      {{#if user}}
      {{#if complaints}}
      <table style="margin-bottom: 7em;">
        <thead>
          <tr>
            <th scope="col">Complaint ID</th>
            <th scope="col">Machine seriel number</th>
            <th scope="col">Date Of purchase</th>
            <th scope="col">Issue</th>
            <th scope="col">Status</th>
          </tr>
        </thead>
        <tbody>
          {{#each complaints}}
          <tr>
            <td data-label="Complaint ID">{{complaintID}}</td>
            <td data-label="Seriel Number">{{machineSerielNumber}}</td>
            <td data-label="Date of purchase">{{DOP}}</td>
            <td data-label="Problem">{{issue}}</td>
            {{#if (eq complaintStatus "Pending")}}
            <td data-label="Status"><button style="background-color: #FDF4F6;color:#DE486C">{{complaintStatus}}</button>
            </td>
            {{/if}}
            {{#if (eq complaintStatus "Progress")}}
            <td data-label="Status"><button style="background-color: #FFF7E6;color:#FFB61A">In Progress</button></td>
            {{/if}}
            {{#if (eq complaintStatus "Solved")}}
            <td data-label="Status"><button style="background-color: #EBF9F4;color:#2FB182">{{complaintStatus}}</button>
            </td>
            {{/if}}
          </tr>
          {{/each}}
        </tbody>
      </table>
      {{else}}
      <div class="not-loggined-img">
        <img src="/images/no complaints.png" alt="">
      </div>
      {{/if}}
      {{else}}
      <div class="not-loggined-img">
        <img src="/images/please login image.png" alt="">
      </div>
      {{/if}}

    </div>




    {{!-- new complaitn submit toast --}}
    {{#if submitted}}
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" style="position: fixed;">
      <div class="toast-header">
        <strong class="me-auto">New Complaint</strong>
        <small>Latest</small>
        <span class="material-symbols-outlined" style="color:#fff;position: absolute;top:10px;right:10px;cursor:pointer"
          onclick="$('.toast').css({'display':'none','opacity':'0','visibility':'visible'});processAjaxData('/complaint/all')">
          cancel
        </span>
      </div>
      <div class="toast-body">
        Your Complaint has been submitted.
      </div>
    </div>
    {{/if}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
      integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
      crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="/js/complaints/main.js"></script>

</body>
{{>commonScripts}}

</html>