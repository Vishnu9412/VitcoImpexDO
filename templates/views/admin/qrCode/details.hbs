{{>adminHeader}}
{{#*inline "style"}}
<style>
    .menu-link[data-link="qrCode"] {
        background-color: #26ABE2;
        color: #fff;
    }
</style>
{{/inline}}

{{#*inline "body"}}

<form action="/api/v1/qr-code/update/{{details._id}}" method="post">
    <div class="container mt-4">
        <div class="row d-flex justify-content-center">
            <div class="col-md-5">
                <h3>Qr code details Admin</h3>
                <div class="form-group mt-4 qrCodeDetails">
                </div>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-md-5 d-flex justify-content-end">
                <button class="btn bg-text-base-color" type="submit">Update</button>
            </div>
        </div>
    </div>
</form>
{{/inline}}
{{#*inline "css"}}
<link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
