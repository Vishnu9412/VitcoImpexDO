    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
{{/inline}}
{{!-- =============================================================== --}}
<script>
    function ObjectId() { }
    details = {{{ details }}}
    TempData = ``
    keys = Object.keys(details.fields)
    console.log(details)
    
    keys.forEach((key, i) => {
        TempData += `
            <div class="form-group">
                <label for="${key}">${key}</label>
                <input type="text" value="${details.fields[keys[i]]}" class="form-control shadow-none" id="${details.fields[keys[i]]}" name="${key}">
            </div>`
    });
    $(`.qrCodeDetails`).html(TempData)
</script>