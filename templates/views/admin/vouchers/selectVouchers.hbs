<style>
    @import url('https://fonts.googleapis.com/css2?family=Mukta:wght@700&display=swap');

    body {
        background-color: #eceef5 !important;
    }

    .menu-link[data-link="vouchers"] {
        background-color: #26ABE2;
        color: #fff !important;
    }

    #search-box {
        display: none;
    }

    .voucher-option {
        height: 7em;
        background-color: #f4f6fb;
        color: white;
        min-width: 17em;
        position: relative;
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
    }

    .voucher-option:hover {
        background-color: rgb(250, 250, 250);
        box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
    }

    .voucher-option .voucher-icon {
        background-color: #26ABE2;
        height: 2em;
        width: 2em;
        font-size: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 50%;
        border: 2px solid white;
        position: absolute;
        top: -1em;
        left: 40%;
    }

    .voucher-option .voucher-body>a {
        font-family: 'Mukta', sans-serif;
    }
</style>
{{/style}}


