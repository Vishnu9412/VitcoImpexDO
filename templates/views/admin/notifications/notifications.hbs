{{#> style}}
<style>
    @import url("https://fonts.googleapis.com/css2?family=Open+Sans:wght@500&family=Poppins:ital,wght@0,400;0,500;1,500&display=swap");
    @import url('https://fonts.googleapis.com/css2?family=Arimo:wght@600&family=League+Spartan&display=swap');

    body,
    html {
        overflow-x: hidden;
    }

    .menu-link[data-link="notifications"] {
        background-color: #26ABE2;
        color: #fff;
    }

    .font-spartan-400 {
        font-family: 'League Spartan', sans-serif !important;
    }

    .arimo-600 {
        font-family: 'League Spartan', sans-serif !important;
    }

    body {
        font-family: "Poppins", sans-serif;
        font-weight: 400;
    }

    #search-form {
        display: none;
    }
</style>
{{/style}}
{{#*inline "body"}}

<div class="container all-notifications-container mb-4">
    <div class="row mt-4">
        {{!-- <div class="col-12">
            <h4 class="text-secondary my-4 text-center">Notifications</h4>
        </div> --}}
        <div class="col">
            <div class="d-flex flex-column align-items-center w-100 notifications-loading">
                <div class="spinner-border text-primary" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <h6>Loading notifications, Please wait</h6>
            </div>
            <div class="list-group all-notifications-group">

            </div>
        </div>
    </div>
</div>

<div class="hide notification-details-container">
    <div class="container-fluid text-capitalize"></div> 
    {{#ifeq admin.role.0.roleName "admin"}}
    <button class="btn btn-primary shadow-none apply-changes-button" style="position: fixed;bottom:5px;right:7em"
        onclick="applyChanges()">Apply changes</button>
    {{/ifeq}}
</div>
{{/inline}}
